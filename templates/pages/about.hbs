<section class="py-20">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl md:text-5xl font-heading font-bold text-gray-900 mb-8">{{aboutTitle}}</h1>
    <div data-aos="fade-up" class="prose prose-lg max-w-none">
      <p class="text-gray-600 leading-relaxed text-lg md:text-xl mb-6">{{description}}</p>
    </div>

    {{#ifExists businessName}}
    <div data-aos="fade-up" class="mt-14 bg-secondary-50 rounded-2xl p-10">
      <h2 class="text-2xl font-heading font-bold text-secondary-800 mb-6">Why Choose {{businessName}}?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-14 h-14 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Quality</h3>
          <p class="text-sm text-gray-600 leading-relaxed">We never cut corners. Excellence is our standard.</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Reliability</h3>
          <p class="text-sm text-gray-600 leading-relaxed">Count on us to deliver, every single time.</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Care</h3>
          <p class="text-sm text-gray-600 leading-relaxed">We treat every customer like family.</p>
        </div>
      </div>
    </div>
    {{/ifExists}}
  </div>
</section>

{{> cta-banner}}
