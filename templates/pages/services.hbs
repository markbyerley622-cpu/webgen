<section class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl md:text-5xl font-heading font-bold text-gray-900 text-center mb-4">{{servicesTitle}}</h1>
    <p class="text-gray-500 text-center max-w-2xl mx-auto mb-14">{{tagline}}</p>

    {{#if useMenuLayout}}
      {{#hasItems services}}
      <div class="max-w-3xl mx-auto space-y-1">
        {{#each services}}
        <div class="flex justify-between items-center py-5 border-b border-gray-200 last:border-0 group">
          <div class="flex-1 pr-6">
            <h3 class="text-lg font-heading font-semibold text-gray-900 group-hover:text-accent-700 transition-colors">{{this.name}}</h3>
            <p class="text-gray-500 text-sm mt-1.5">{{this.description}}</p>
          </div>
          {{#ifExists this.price}}
          <span class="text-accent-700 font-bold text-lg whitespace-nowrap">{{this.price}}</span>
          {{/ifExists}}
        </div>
        {{/each}}
      </div>
      {{else}}
      <div class="text-center py-12">
        <p class="text-gray-500 mb-4">Our full menu is coming soon.</p>
        <a href="contact.html" class="inline-block bg-accent-600 text-white font-semibold px-6 py-2.5 rounded-lg hover:bg-accent-700 transition-colors">{{ctaText}}</a>
      </div>
      {{/hasItems}}
    {{else}}
      {{#hasItems services}}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {{#each services}}
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 hover:shadow-md transition-shadow border-t-4 border-t-accent-500">
          <div class="w-10 h-10 bg-accent-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <h3 class="text-lg font-heading font-semibold text-gray-900 mb-3">{{this.name}}</h3>
          <p class="text-gray-600 text-sm leading-relaxed">{{this.description}}</p>
        </div>
        {{/each}}
      </div>
      {{else}}
      <div class="text-center py-12">
        <p class="text-gray-500 mb-4">Our full service list is coming soon.</p>
        <a href="contact.html" class="inline-block bg-accent-600 text-white font-semibold px-6 py-2.5 rounded-lg hover:bg-accent-700 transition-colors">{{ctaText}}</a>
      </div>
      {{/hasItems}}
    {{/if}}
  </div>
</section>

{{> cta-banner}}
