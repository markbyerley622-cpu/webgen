{{#hasItems galleryImages}}
<section class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-heading font-bold text-center mb-4">Gallery</h2>
    <p class="text-gray-500 text-center mb-12 max-w-xl mx-auto">Take a look at what we do</p>
    <div class="grid grid-cols-2 lg:grid-cols-3 gap-4">
      {{#each galleryImages}}
      <div data-aos="fade-up" class="overflow-hidden rounded-xl shadow-sm">
        <img src="{{this}}" alt="Gallery image" class="w-full h-64 object-cover hover:scale-105 transition-transform duration-300">
      </div>
      {{/each}}
    </div>
  </div>
</section>
{{/hasItems}}
