<section class="relative bg-gradient-to-br from-accent-900 via-accent-700 to-accent-800 text-white overflow-hidden">
  {{#ifExists bannerImage}}
  <div class="absolute inset-0">
    <img src="{{bannerImage}}" alt="" class="w-full h-full object-cover">
  </div>
  <div class="absolute inset-0 bg-black/50"></div>
  {{else}}
  <div class="absolute inset-0 bg-black/20"></div>
  {{/ifExists}}
  <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-32 md:py-40 text-center">
    <h1 class="text-5xl md:text-6xl lg:text-7xl font-heading font-bold mb-6" style="text-shadow: 0 2px 12px rgba(0,0,0,0.3);">{{businessName}}</h1>
    <p class="text-lg md:text-xl text-white/80 max-w-2xl mx-auto mb-12 leading-relaxed">{{tagline}}</p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a href="services.html" class="inline-block bg-white text-accent-700 font-semibold px-8 py-3.5 rounded-lg hover:bg-accent-50 transition-colors shadow-lg text-sm uppercase tracking-wide">
        View {{#if useMenuLayout}}Menu{{else}}Services{{/if}}
      </a>
      <a href="contact.html" class="inline-block bg-secondary-500 text-white font-semibold px-8 py-3.5 rounded-lg hover:bg-secondary-400 transition-colors shadow-lg border border-white/20 text-sm uppercase tracking-wide">
        {{ctaText}}
      </a>
      <a href="contact.html" class="inline-block bg-transparent text-white font-semibold px-8 py-3.5 rounded-lg hover:bg-white/10 transition-colors border border-white/40 text-sm uppercase tracking-wide">
        Opening Hours
      </a>
    </div>
  </div>
</section>
