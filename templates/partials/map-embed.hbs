{{#ifExists mapEmbed}}
<div class="rounded-xl overflow-hidden shadow-sm border border-gray-100 h-64 md:h-80">
  <iframe
    src="{{mapEmbed}}"
    width="100%"
    height="100%"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade">
  </iframe>
</div>
{{else}}
  {{#ifExists location}}
  <div class="rounded-xl bg-gray-100 p-8 text-center h-64 md:h-80 flex items-center justify-center">
    <div>
      <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
      <p class="text-gray-600 font-medium">{{location}}</p>
    </div>
  </div>
  {{/ifExists}}
{{/ifExists}}
