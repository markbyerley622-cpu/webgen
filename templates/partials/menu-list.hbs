<section class="py-20 bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-heading font-bold text-center mb-4">{{servicesTitle}}</h2>
    <p class="text-gray-500 text-center mb-12 max-w-xl mx-auto">{{tagline}}</p>
    {{#hasItems services}}
    <div class="space-y-1">
      {{#each services}}
      <div data-aos="fade-up" class="flex justify-between items-center py-5 border-b border-gray-200 last:border-0 group">
        <div class="flex-1 pr-6">
          <h3 class="text-lg font-heading font-semibold text-gray-900 group-hover:text-accent-700 transition-colors">{{this.name}}</h3>
          <p class="text-gray-500 text-sm mt-1.5">{{this.description}}</p>
        </div>
        {{#ifExists this.price}}
        <span class="text-accent-700 font-bold text-lg whitespace-nowrap">{{this.price}}</span>
        {{/ifExists}}
      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="text-center py-8">
      <p class="text-gray-500 mb-4">Our menu is coming soon.</p>
      <a href="contact.html" class="inline-block bg-accent-600 text-white font-semibold px-6 py-2.5 rounded-lg hover:bg-accent-700 transition-colors">{{ctaText}}</a>
    </div>
    {{/hasItems}}
  </div>
</section>
