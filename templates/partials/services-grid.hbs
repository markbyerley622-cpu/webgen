<section class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-heading font-bold text-center mb-4">{{servicesTitle}}</h2>
    <p class="text-gray-500 text-center mb-12 max-w-xl mx-auto">{{tagline}}</p>
    {{#hasItems services}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {{#each services}}
      <div data-aos="fade-up" class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 hover:shadow-md transition-shadow border-t-4 border-t-secondary-500">
        <h3 class="text-lg font-heading font-semibold text-gray-900 mb-3">{{this.name}}</h3>
        <p class="text-gray-600 text-sm leading-relaxed">{{this.description}}</p>
      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="text-center py-8">
      <p class="text-gray-500 mb-4">Our full service list is coming soon.</p>
      <a href="contact.html" class="inline-block bg-accent-600 text-white font-semibold px-6 py-2.5 rounded-lg hover:bg-accent-700 transition-colors">{{ctaText}}</a>
    </div>
    {{/hasItems}}
  </div>
</section>
