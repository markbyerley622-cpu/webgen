<section class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-heading font-bold text-center mb-4">What Our Customers Say</h2>
    <p class="text-gray-500 text-center mb-12 max-w-xl mx-auto">Don't just take our word for it</p>
    {{#hasItems testimonials}}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {{#each testimonials}}
      <div data-aos="fade-up" class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 border-l-4 border-l-secondary-400">
        <svg class="w-8 h-8 text-secondary-200 mb-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
        </svg>
        <p class="text-gray-600 italic mb-6 leading-relaxed">"{{this.text}}"</p>
        <p class="font-semibold text-gray-900 text-sm">{{this.name}}</p>
      </div>
      {{/each}}
    </div>
    {{/hasItems}}
  </div>
</section>
